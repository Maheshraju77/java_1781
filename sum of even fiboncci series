import java.util.Scanner;

public class EvenFibonacciSum {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        
   
        System.out.print("Enter the value of N: ");
        int n = sc.nextInt();
        
        int fib1 = 0, fib2 = 1;
        int sum = 0;
        
       
        for (int i = 0; i <= 2 * n; i++) {
            if (i % 2 == 0) {
                sum += fib1;
            }
            int nextFib = fib1 + fib2;
            fib1 = fib2;
            fib2 = nextFib;
        }
        
       
        System.out.println("Sum of numbers at even indexes in Fibonacci series till 2*Nth term: " + sum);
    }
}
